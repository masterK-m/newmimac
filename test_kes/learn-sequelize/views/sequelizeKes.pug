doctype html
html
  head
    meta(charset='utf-8')
    title 시퀄라이즈_kes 서버
    style.
      table {
        border: 1px solid black;
        border-collapse: collapse;
      }

      table th, table td {
        border: 1px solid black;
      }
  body
    div
      form#user-form
        fieldset
          legend 사용자 등록
          div
            input#name(type="text" placeholder="이름")
          button(type="submit") 등록
      br
      table#user-list
        thead
          tr
            th 아이디
            th 이름
        tbody
          for user in UserKes
            tr
              td= user.id
              td= user.name
    script(src='/sequelizeKes.js')
